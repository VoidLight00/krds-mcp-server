# KRDS MCP Server Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# KRDS Website Configuration
KRDS_BASE_URL=https://v04.krds.go.kr
KRDS_TIMEOUT=30000
KRDS_RETRY_ATTEMPTS=3
KRDS_RETRY_DELAY=1000

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_SLOWMO=0
PUPPETEER_TIMEOUT=30000
PUPPETEER_VIEWPORT_WIDTH=1920
PUPPETEER_VIEWPORT_HEIGHT=1080
PUPPETEER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Cache Configuration
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Korean Text Processing
KOREAN_STEMMING_ENABLED=true
KOREAN_ROMANIZATION_ENABLED=true

# Image Processing
IMAGE_DOWNLOAD_ENABLED=true
IMAGE_MAX_SIZE_MB=10
IMAGE_ALLOWED_FORMATS=jpg,jpeg,png,gif,webp

# Export Configuration
EXPORT_MAX_FILE_SIZE_MB=50
EXPORT_ALLOWED_FORMATS=json,csv,xlsx,pdf

# Security
CORS_ENABLED=true
CORS_ORIGIN=*
HELMET_ENABLED=true

# Monitoring and Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/krds-mcp-server.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Development
DEBUG_MODE=false
MOCK_MODE=false