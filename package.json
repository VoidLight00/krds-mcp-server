{
  "name": "krds-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for scraping and processing Korean government KRDS website (https://v04.krds.go.kr)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:cache": "node scripts/test-cache.js",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "docker:build": "docker build -t krds-mcp-server .",
    "docker:run": "docker run -p 3000:3000 krds-mcp-server",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "server",
    "korean",
    "government",
    "krds",
    "scraping",
    "puppeteer",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "puppeteer": "^21.7.0",
    "cheerio": "^1.0.0-rc.12",
    "node-cache": "^5.1.2",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "hangul-js": "^0.2.6",
    "korean-romanization": "^1.0.5",
    "iconv-lite": "^0.6.3",
    "sharp": "^0.33.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "user-agents": "^1.0.1484",
    "proxy-agent": "^6.3.1",
    "jsdom": "^23.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.11",
    "@types/pdf-parse": "^1.1.4",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "@types/user-agents": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/krds-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/krds-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/krds-mcp-server#readme"
}